<%- include aceHeader %>

<!-- /section:basics/content.breadcrumbs -->
<div class="page-content">
    <!-- /section:settings.box -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="page-header">
                <h1>
                    日记修改
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        修改日记详情
                    </small>
                </h1>
            </div>

            <div class="text-center">
                <form method="post">
                    <div class="form-group text-center">
                        <input type="text" class="form-control" name="title" value="<%= art.title%>" placeholder="<%= art.title%>">
                    </div>
                    <div class="form-group text-center">
                        <input type="text" class="form-control" name="tag" value="<%= art.tag%>" placeholder="<%= art.title%>">
                    </div>
                    <div class="form-group">
                                <textarea rows="6" cols="188" class="form-control" name="content" placeholder="">
									<%= art.content%>
                                </textarea>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div>
                                <button class="btn btn-primary btn-rounded " style="float:left">
                                    <i class="fa fa-pencil-square-o"></i>
                                    <a class="link" href="/detail/<%= art._id %>"><span>返回</span></a>
                                </button>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-success btn-rounded" style="float:left">
                                    <i class="fa fa-pencil-square-o"></i>
                                    <a class="link" href="/update/<%= art._id %>"><span>提交</span></a>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div><!-- /.page-content -->

<%- include aceFooter %>