<%- include header %>

<div class="contentpanel demo" style="padding-top: 8%; padding-left: 20%;padding-right: 10%;height: 1000px">
    <h1 class="text-center page-title fh5co-lead" style="margin-bottom: 30px">修改笔记</h1>
            <div class="container">
                <div class="row">
                    <div class="text-center">
                        <form method="post">
                            <div class="form-group text-center">
                                <input type="text" class="form-control" name="title" value="<%= art.title%>" placeholder="<%= art.title%>">
                            </div>
                            <div class="form-group text-center">
                                <input type="text" class="form-control" name="tag" value="<%= art.tag%>" placeholder="<%= art.title%>">
                            </div>
                            <div class="form-group">
                                <textarea rows="6" cols="188" class="form-control" name="content" placeholder="">
									<%= art.content%>
                                </textarea>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                <div>
                                    <button class="btn btn-primary btn-rounded " style="float:left">
                                        <i class="fa fa-pencil-square-o"></i>
                                        <a class="link" href="/detail/<%= art._id %>"><span>返回</span></a>
                                    </button>
                                </div>
                                <div>
                                     <button type="submit" class="btn btn-success btn-rounded" style="float:left">
                                         <i class="fa fa-pencil-square-o"></i>
                                         <a class="link" href="/update/<%= art._id %>"><span>提交</span></a>
                                     </button>
                                </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

<% include footer %>