<%- include aceHeader %>

<!-- /section:basics/content.breadcrumbs -->
<div class="page-content">
	<!-- /section:settings.box -->
	<div class="row">
		<div class="col-xs-12">
			<!-- PAGE CONTENT BEGINS -->
			<div class="page-header">
				<h1>
					日记发表
					<small>
						<i class="ace-icon fa fa-angle-double-right"></i>
						编辑日记详情后发表
					</small>
				</h1>
			</div>
			<div class="container">
				<div class="row">
					<div class ="col-sx-4 col-sx-offset-4">
						<form method = "post">
							<div class="form-group text-center">
								<h1 >日记发表</h1>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" name="title" placeholder="标题">
							</div>

							<div class="form-group">
								<input type="text" class="form-control" name="tag" placeholder="标签">
							</div>

							<div class="form-group">
								<textarea rows="6" cols="188" class="form-control" name="content" placeholder="内容">
									</textarea>
							</div>
							<div class="row">
								<div class="col-sm-2">
									<button class="btn btn-primary  center-block contentFont btn-lg" type ="button" style="float:left">
										<i class="fa fa-pencil-square-o"></i>
										<a class="link" href="/home"><span>返回</span></a>
									</button>
								</div>
								<div class="col-sm-3">
									<button class="btn btn-success  center-block contentFont btn-lg" type ="submit" style="float:left">
										<i class="fa fa-pencil-square-o"></i>
										<span>提交</span>
									</button>
								</div>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div><!-- /.page-content -->

<%- include aceFooter %>